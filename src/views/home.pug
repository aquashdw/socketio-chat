    main(class="p-3")
      // nickname-view
      div(id="nickname-view" class="container")
        div(class="row")
          div(class="col")
          div(class="col-6")
            form(class="form-control p-3")
              h1(class="mb-3") Welcome!!!
              div(class="mb-3")
